{
  "instrument": {
    "echo": {
      "type": "script",
      "description": "An instrument that sends its arguments to standard output",
      "params": "*",
      "staleness": 5000,
      "cost": "low",
      "script": [
        "echo {argsNames}",
        "echo {allArgs}"
      ],
      "format": {
        "type": "table",
        "hideHeader": 1
      },
      "__from": [
        "echo.instrument.json"
      ]
    },
    "__from": [
      "echo.instrument.json",
      "ls.instrument.json"
    ],
    "ls": {
      "type": "script",
      "description": "A demo instrument that displays the directory contents",
      "params": {
        "dir": {
          "default": ".",
          "description": "The directory to display"
        }
      },
      "staleness": 5000,
      "cost": "low",
      "windows": {
        "script": "dir /b {dir}",
        "format": {
          "type": "table",
          "headers": [
            "file"
          ]
        }
      },
      "linux": {
        "script": "ls -l {dir}",
        "format": {
          "type": "table",
          "headers": [
            "notdoneyet"
          ]
        }
      },
      "__from": [
        "ls.instrument.json"
      ]
    }
  },
  "__from": [
    "echo.instrument.json",
    "ls.instrument.json"
  ]
}